ADC_HandleTypeDef hadc;
DMA_HandleTypeDef hdma_adc;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
int State = 0;
uint8_t tx_buff[] = "HELLO\n\r";
uint8_t rx_buff[8];
uint32_t adc_value[3]; //0: IN0, 1: IN1, 2: Temp
float temp;

static char flag[5]="";
static int dummy = 0;
static char time_[80]="NA";
